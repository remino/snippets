{
	"root": true,
	"env": {
		"browser": true,
		"jasmine": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": ["error", "never"],
		"arrow-parens": ["error", "as-needed"],
		"import/extensions": ["error", "always"],
		"import/prefer-default-export": "off",
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-unused-vars": "off",
		"no-underscore-dangle": [
			"error",
			{
				"allow": ["__dirname", "__filename"]
			}
		],
		"nuxt/no-cjs-in-config": "off"
	}
}
