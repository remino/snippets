{
	"root": true,
	"env": {
		"browser": true,
		"jasmine": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": [
			"error",
			"never"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"import/extensions": [
			"error",
			"always"
		],
		"import/prefer-default-export": "off",
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-underscore-dangle": 1,
		"nuxt/no-cjs-in-config": "off"
	}
}
